{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "typeRoots": [
    "./node_modules",
    "./src/types"
  ]
}

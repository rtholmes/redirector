<div class="container">

    <div class="wide center">
        <h3>Create New Link</h3>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
                {{#if newURL}}
                    <div style="padding-top:0.5em">
                        <a href="{{newHost}}">{{newHost}}</a> <br/> <b>&nbsp;&nbsp;-></b> <br/><a
                            href="{{newURL}}">{{newURL}}</a>
                    </div>
                {{/if}}
            </div>
        {{/if}}

        <form method="POST" action="createLink">
            <div class="form-group">
                <label for="name"><b>Short Name</b> (e.g., social/gameLink). <br/>* will be generated (e.g.,
                    foo/* -> foo/a23s). <br/>If blank, a random name will be generated. <br/>Final link will be: {{HOST}}/<b>shortName</b>.</label>
                <input name="name" type="email" autocorrect="off" autocapitalize="none" class="form-control" id="name" placeholder="Enter Short Name">
            </div>
            <div class="form-group">
                <label for="url"><b>URL</b> (must start with http:// or https://).</label>
                <input name="url" type="text" class="form-control" id="url" placeholder="Enter URL">
            </div>
            <button type="submit" class="btn btn-primary">Create Link</button>
        </form>


        <h3>Existing Links</h3>

        <table style="width: 100%;">
            <thead>
            <tr>
                <th>Delete</th>
                <th>Name</th>
                <th>URL</th>
                <th>Owner</th>
                <th>Created</th>
            </tr>
            </thead>
            <tbody>
            {{#each linkTable}}
                <tr>
                    <td>
                        <a href="removeLink?name={{name}}">
                        <img border="0" alt="delete link {{name}}" src="{{../prefix}}/admin/static/trash.png"
                             height="15px;">
                        </a>
                    </td>
                    <td><a href="{{../HOST}}{{../prefix}}/{{name}}">{{name}}</a></td>
                    <td style="max-width: 20em; word-wrap: break-word;"><a href="{{url}}">{{url}}</a></td>
                    <td>{{user}}</td>
                    <td>{{created}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <!--    </div>-->
    <!--</div>-->
</div>
